<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProgressFit.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProgressFit.Mobile"
    xmlns:workout="clr-namespace:ProgressFit.Mobile.Pages.Modules.Workout.Main"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Home"
            Icon="cat.png">
            <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
        </Tab>
        <Tab Title="Workout"
            Icon="dog.png">
            <ShellContent Title="Workout" ContentTemplate="{DataTemplate workout:WorkoutMainPage}" Route="WorkoutMainPage"  />
        </Tab>
    </TabBar>
</Shell>
