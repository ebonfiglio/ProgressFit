<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProgressFit.Mobile.Pages.Modules.Workout.Main.WorkoutMainPage"
             xmlns:viewmodel="clr-namespace:ProgressFit.Mobile.Pages.Modules.Workout.Main"
             x:DataType="viewmodel:WorkoutMainPageModel"
             Title="WorkoutMainPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button
                x:Name="newRoutineBtn"
                Text="New Routine"
                SemanticProperties.Hint="Go to workout center"
                Command="{Binding NewRoutineBtnClickedCommand}"
                HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>