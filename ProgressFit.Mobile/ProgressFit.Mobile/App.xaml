<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProgressFit.Mobile.App">
    <Application.Resources>
        <ResourceDictionary>
                <Style TargetType="Button" Class="MainButtonClass">
                    <Setter Property="BackgroundColor" Value="Black"></Setter>
                    <Setter Property="TextColor" Value="White"></Setter>
                    <Setter Property="Opacity" Value=".3"></Setter>
                </Style>
                <LinearGradientBrush x:Key="MainBackground" StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#C2B480" Offset="0.1"/>
                    <GradientStop Color="#6A6349" Offset="1.0"/>
                </LinearGradientBrush>
            </ResourceDictionary>
    </Application.Resources>
</Application>